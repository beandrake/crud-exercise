@model IEnumerable<PassengerManager.Models.Passenger>

@{
    ViewData["Title"] = "Passenger List";
}

<h2>Passenger List</h2>

<!-- button for user to create new record-->
<p>
    <a asp-action="Create">Create New</a>
</p>

<!-- table containing all existing records (and options to edit them) -->
<table class="table">
    <thead>
        <tr>
            <!-- table headings -->
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <!-- create a row for each Passenger -->
    @foreach (var item in Model) {
        <tr>
            <!-- the data from the Passenger entry that is important to users -->
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <!-- to the right of each row of data, have links to the following actions -->
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
